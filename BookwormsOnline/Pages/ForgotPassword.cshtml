@page
@model BookwormsOnline.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>@ViewData["Title"]</h2>
            <p>Enter your email address and we'll send you a link to reset your password.</p>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Model.Email" class="form-label"></label>
                    <input asp-for="Model.Email" class="form-control" placeholder="your@email.com" />
                    <span asp-validation-for="Model.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Send Reset Link</button>
                <a asp-page="./Login" class="btn btn-secondary">Back to Login</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
